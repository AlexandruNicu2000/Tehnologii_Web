@model IEnumerable<OnlineShop.Domain.Entities.CartProduct>

<h1>Cart</h1>
<table>
     <thead>
          <tr>
               <th>Name</th>
               <th>Price</th>
               <th>Quantity</th>
               <th>Total</th>
               <th>Actions</th>
          </tr>
     </thead>
     <tbody>
          @foreach (var item in Model)
          {
               <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Product.Price.ToString("0.00")</td>
                    <td>@item.Quantity</td>
                    <td>@item.TotalPrice.ToString("0.00")</td>
                    <td>
                         <form asp-action="RemoveFromCart" method="post">
                              <input type="hidden" name="productId" value="@item.Product.Id" />
                              <button type="submit">Remove</button>
                         </form>
                    </td>
               </tr>
          }
     </tbody>
</table>
