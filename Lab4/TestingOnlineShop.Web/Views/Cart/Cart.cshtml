
@{
     ViewBag.Title = "Cart";
}

@using TestingOnlineShop.Domain.Entities
@model List<CartItem>

<h2>Coș de cumpărături</h2>

<table>
     <tr>
          <th>Produs</th>
          <th>Preț Unitar</th>
          <th>Cantitate</th>
          <th>Preț Total</th>
          <th>Acțiuni</th>
     </tr>
     @foreach (var item in Model)
     {
          <tr>
               <td>@item.Product.Name</td>
               <td>@item.Product.Price mdl</td>
               <td>@item.Quantity</td>
               <td>@item.FinalPrice mdl</td>
               <td>
                    <form action="@Url.Action("RemoveFromCart", "Cart")" method="post">
                         <input type="hidden" name="id" value="@item.Product.Id" />
                         <button type="submit">Șterge</button>
                    </form>
               </td>
          </tr>
     }

</table>

